<%= stylesheet_link_tag 'nonHomeNav', media: 'print, screen' %>
<div class="container belowNav">
<p id="notice"><%= notice %></p>


<table>
  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td class="fixlink"><%= content.body.html_safe %></td>
<% if current_user.try(:admin?) %>
	<td><%= link_to 'Edit', edit_content_path(content), class:"btn btn-warning", style:"width:70px;" %><br/>
        <%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-success", style:"width:70px;" %></td>
<%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.try(:admin?) %>
	<%= link_to 'New Content', new_content_path %>
<%end%>
</div>


=link_to "Back to home", root_path, class: "btn btn-success goHome"
= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class:"form-signin"}) do |f|
  %h2.form-signin-heading Please sign in
  .field
    = f.label :email, class: "sr-only"
    %br/
    = f.email_field :email, autofocus: true, placeholder:"Email Address", class:"form-control"
  .field
    //= f.label :password
    = f.password_field :password, autocomplete: "off", placeholder:"Password", class:"form-control"
  - if devise_mapping.rememberable?
    .field
      = f.check_box :remember_me
      = f.label :remember_me, class: "checkbox"
  .actions
    = f.submit "Sign in", class:"btn btn-lg btn-primary btn-block"
= render "devise/shared/links"

<%= stylesheet_link_tag 'nonHomeNav', media: 'print, screen' %>
<% if current_user.try(:admin?) %>
<p id="notice"><%= notice %></p>
<br/>
<h1 style="text-align:center;" class:"belowNav">Users</h1>

<div class="container belowNav">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-2">
      <h4>Email</h4>
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-5">
      <h4>Admin?</h4>
    </div>
    <div class="col-md-3">
    </div>
  </div>
  <% @users.each do |user| %>
    <div class="row eventRows">
    <div class="col-md-3">
    </div>
      <div class="col-md-2 eventText">
        <%= user.email %>
      </div>
    <div class="col-md-2">
    </div>
      <div class="col-md-2 eventText">
        <%= user.admin %>
      </div>

    </div>
      <br/>
  <% end %>
</div>

<% else %>

  <script>
  setTimeout(function() {
  window.location.href = "/";
}, 2000);
  </script>

<% end %>

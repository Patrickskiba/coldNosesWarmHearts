<html>
<head>
  <meta content="text/html; charset=UTF-8" http-equiv="Content-Type"/>
  <title>ColdNoses</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css",'application.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js","https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js", 'application', 'data-turbolinks-track' => true %>
</head>
<body>
<% if current_page?(root_path) %>
    <section class="banner" role="banner">
      <div class="container">
        <div class="banner-text text-center">
          <h1>Cold Noses,</h1>
          <h2>Warm Hearts</h2>
          <%= link_to "Join Us", new_user_registration_path, class: "btn btn-warning" %>
        </div>
      </div>
    </section>
<% end %>
</body>
<% unless current_page?(new_user_registration_path) || current_page?(new_user_session_path) %>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header"></div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= link_to "Home", root_path %>
            </li>
            <li>
              <%= link_to 'Calendar', events_path, :class => 'navbar-link' %>
            </li>
            <li>
              <%= link_to 'Gallery', pictures_path, :class => 'navbar-link' %>
            </li>
            <li>
              <%= link_to 'Volunteer', volunteer_path, :class => 'navbar-link' %>
            </li>
            <% if user_signed_in? %>
                <li>
                  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %>
                </li>
                <li>
                  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
                </li>
            <% else %>
                <li>
                  <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link' %>
                </li>
                <li>
                  <%= link_to "Login", new_user_session_path, :class => 'navbar-link' %>
                </li>
            <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
<% end %>
<div class="container-fluid main">
  <%= yield %>
</div>
</html>

